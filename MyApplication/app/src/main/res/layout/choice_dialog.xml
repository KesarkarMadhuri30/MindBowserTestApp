<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose one"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_8"
        android:fontFamily="@font/bitter_bold"
        android:textSize="23sp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_call"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/padding_10"
        app:cardElevation="@dimen/height_5"
        app:cardMaxElevation="@dimen/margin_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <ImageView
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:background="@drawable/green_rect_bg"
                android:src="@drawable/ic_baseline_phone_in_talk_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/bitter_bold"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_message"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/padding_10"
        app:cardElevation="@dimen/height_5"
        app:cardMaxElevation="@dimen/margin_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <ImageView
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/margin_8"
                android:background="@drawable/rect_bg"
                android:src="@drawable/ic_baseline_message_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SMS"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/bitter_bold"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
